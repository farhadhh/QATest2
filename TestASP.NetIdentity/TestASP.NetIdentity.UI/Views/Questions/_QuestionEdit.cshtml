@using TestASP.NetIdentity.DomainEntities;
@model Question

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="QuestionTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionTitle" class="form-control" />
                <span asp-validation-for="QuestionTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QTypeId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="QTypeId" class="form-control" asp-items="ViewBag.QTypeId"></select>
                <span asp-validation-for="QTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary" onclick="$('#divEdit').css('display', 'none');">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
