                <input asp-for="AdTitle" class="form-control" />
                <span asp-validation-for="AdTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="JobTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="EmployerCompany" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployerCompany" class="form-control" />
                <span asp-validation-for="EmployerCompany" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="Deadline" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="CooperationType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CooperationType" class="form-control" />
                <span asp-validation-for="CooperationType" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="SkillDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SkillDesc" class="form-control" />
                <span asp-validation-for="SkillDesc" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="DutyDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DutyDesc" class="form-control" />
                <span asp-validation-for="DutyDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="EmployerDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployerDescription" class="form-control" />
                <span asp-validation-for="EmployerDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="EmployerWebsite" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployerWebsite" class="form-control" />
                <span asp-validation-for="EmployerWebsite" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="EmployerEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployerEmail" class="form-control" />
                <span asp-validation-for="EmployerEmail" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="EmployerPhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployerPhoneNumber" class="form-control" />
                <span asp-validation-for="EmployerPhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6" style="padding:10px;">
            <label asp-for="EmployerAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployerAddress" class="form-control" />
                <span asp-validation-for="EmployerAddress" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6" style="padding:10px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary" onclick="$('#divAdd').css('display', 'none');">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
