@using TestASP.NetIdentity.DomainEntities;
@model QuestionType


<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="QTypeTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QTypeTitle" class="form-control" />
                <span asp-validation-for="QTypeTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary" onclick="$('#divAdd').css('display', 'none');">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
